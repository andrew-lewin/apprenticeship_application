<li id="suggestion">
  <span class="user-email"><%= suggestion.user.email %></span>
  <span class="content"><%= suggestion.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(suggestion.created_at) %> ago.
    <% if current_user == suggestion.user %>
      <%= link_to "delete", suggestion, method: :delete, data: { confirm: "You sure?" } %>
    <% end %>
  </span>
</li>
